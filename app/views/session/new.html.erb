<% provide(:title, "Log in") %>
<h1 class="login-title align-items-center">Log in</h1>
<div class="log-in-form container">
  <div class="mb-3">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    
    <%= form_tag login_path do %>
        <%= label_tag :email, nil, :class => "form-label"  %>
        <%= email_field_tag :email, nil, :class => "form-control"%>
        <%= label_tag :password, nil, :class => "form-label"  %>
        <%= password_field_tag :password, nil, :class => "form-control" %>
        <%= check_box_tag :remember_me, nil, :class => "form-check" %>
        <span>Remember me on this computer</span>

        <div class="d-grid gap-2 d-md-flex justify-content-end">
          <%= submit_tag "Log in", :class => "btn btn-primary"%>
        </div>


    <% end %>
    <div class="d-grid gap-2 justify-content-end">
      <p>New to Gaddit? <%= link_to "SIGN UP!", new_user_path, :class => "signup-link" %></p>
    </div>
  </div>
</div>
