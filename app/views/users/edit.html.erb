<h1>User Profile<h1>

<div>
<h3>avatar</h3>
<% @current_user.name %>
</div>

<div class="user-channels">
    <div class="all-channel-list p-6 max-w-sm mx-auto bg-white rounded-xl shadow-lg flex items-center space-x-4">
    <div class="shrink-0">
        
    </div>
    
    <div class="text-xl font-medium text-black">   
        <ul>
            <% @current_user.channels.each do |channel|%>
            <img class="h-12 w-12" src="https://styles.redditmedia.com/t5_2r0ij/styles/communityIcon_yor9myhxz5x11.png" alt="Channel Logo">
            <div >
                <li><%= channel.name %></li>
            <% end %>
            </div>
    
        </ul>
        <button class="px-4 py-1 text-sm text-purple-600 font-semibold rounded-full border border-purple-200 hover:text-white hover:bg-purple-600 hover:border-transparent focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2">Join</button>
    </div>
</div>