<!DOCTYPE html>
<html>
  <head>
    <title>Gaddit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <%= cloudinary_js_config %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    
  </head>
<body>
    <nav class="light-blue darken-3">
      <div>
        <% if @current_user.present? %>
          <ul class="left">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "New post", new_post_path %></li>
            <li><%= link_to "All channels", channels_path %></li>
          </ul>
          <ul class="right">
            <li style="margin-top:5px"><%= cl_image_tag @current_user.avatar, style: "width:25px", class:"circle"%></li>
            <li><%= link_to "Hi, #{@current_user.name}", edit_user_path(@current_user.id) %></li>
            <li><%= link_to "Log out", login_path, :method => "delete" %></li>
        <% else %>
          <ul class="left">
            <li><%= link_to "Home", root_path %></li>
          </ul>
          <ul class="right">
            <li class="white-text"><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Sign up", new_user_path %></li>
          </ul>
        <% end %>
      </div>
    </nav>
    <div>
      <%= yield  %>
    </div>

  </body>
</html>



