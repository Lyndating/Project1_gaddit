<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= @post.title%></h1>
            <h3><%= link_to @current_user.name, user_path(@current_user)%></h3>
        </section>
    </aside>
    <div class="col-md-8">
        <h3>Posted <%= time_ago_in_words(@post.created_at) %> ago.</h3>
        <p><%= @post.content %>
    </div>
</div>
    