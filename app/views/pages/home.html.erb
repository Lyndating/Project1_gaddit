<div class="container">
  <section style="width: 100%; ">
    <% if @current_user.nil? %>
      <div class="row">
        <div class="col s12" style="display:block; margin-left: 10px; margin-bottom: 20px; height: 240px; width: 100%;">
          <div class="welcome-header" style="height: 160px;margin-bottom: 20px;">
            <h1 class="welcome-title center-align light-blue-text darken-3">Welcome to Gaddit!</h1>
            <p class="welcome-title-link light-blue-text darken-3 center-align">Join today: <%= link_to "Sign up", new_user_path,class:"btn light-blue darken-3" %></p>
          </div>
          <div class="card-action" style="height: 60px;">
            
          </div>
        </div>
        <div class="col s12">
        <% @posts.each do | post | %>
          <div class="card" style="display: inline-block; margin-left: 10px; height: 220px; width: 400px;">
            <div class="card-content" style="height: 160px;">
            <span class="card-title"><%= link_to post.title, post_path(post.id) %></span>
            <p><%= truncate post.content, length: 100 %></p>
            </div>
            <div class="card-action" style="height: 60px;">
            <span style="font-size: 12px;"><%= link_to "#" + post.channel.name, channel_path(post.channel) %></span>
            <span class="right"><%= time_ago_in_words(post.created_at) %></span>
            </div>
          </div>
          <% end %>      
        </div>
      </div> 
    <% else %>
    <% @posts.each do | post | %>
      <div class="card" style="display: inline-block; margin-left: 10px; height: 220px; width: 440px;">
        <div class="card-content" style="height: 160px;">
          <span class="card-title"><%= link_to post.title, post_path(post.id) %></span>
          <p><%= truncate post.content, length: 150%>...<%=link_to "read more", post_path(post.id) %></p>
        </div>
        <div class="card-action" style="height: 60px;">
          <span><%= link_to "#" + post.channel.name, channel_path(post.channel) %></span>
          <span class="right"><%= time_ago_in_words(post.created_at) %></span>
        </div>
      </div>
    <% end %>
    <% end %>
  </section>
</div>