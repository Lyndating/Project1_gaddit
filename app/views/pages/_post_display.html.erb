<% @posts.each do | post | %>
    <div class="card home_page_post_display" style="display: inline-block; margin-left: 10px; height: 220px;">
        <div class="card-content" style="height: 160px;">
            <span class="card-title"><%= link_to post.title, post_path(post.id) %></span>
            <p><%= truncate simple_format(post.content), length: 100%></p>
        </div>
        <div class="card-action" style="height: 60px;">
          <span ><%= link_to "#" + post.channel.name, channel_path(post.channel) %></span>
          <span class="right light-blue-text darken-1"><%= time_ago_in_words(post.created_at) %></span>
        </div>
    </div>
<% end %>